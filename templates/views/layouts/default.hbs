<!DOCTYPE HTML>
<html>

<head>
	<title>SpecialNewz.com</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
	{{#if_or data.post data.categories}}
		<link rel="stylesheet" href="../../assets/css/main.css" />
	{{else}}
		<link rel="stylesheet" href="assets/css/main.css" />
	{{/if_or}}
	<!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->
	<!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->

	{{{isAdminEditorCSS user}}}
</head>

<body>

	<!-- Wrapper -->
	<div id="wrapper">

		<!-- Main -->
		<div id="main">
			<div class="inner">

				<!-- Header -->
				<header id="header">
					<a href="/" class="logo">SpecialNewz.com</a>
					<ul class="icons">
						<li>
							<a href="#" class="icon fa-twitter">
								<span class="label">Twitter</span>
							</a>
						</li>
						<li>
							<a href="#" class="icon fa-facebook">
								<span class="label">Facebook</span>
							</a>
						</li>
						<li>
							<a href="#" class="icon fa-snapchat-ghost">
								<span class="label">Snapchat</span>
							</a>
						</li>
						<li>
							<a href="#" class="icon fa-instagram">
								<span class="label">Instagram</span>
							</a>
						</li>
						<li>
							<a href="#" class="icon fa-medium">
								<span class="label">Medium</span>
							</a>
						</li>
					</ul>
				</header>

				<!-- Banner -->
				<section id="banner">
					<div class="content">
						<!-- Section -->
						<div id="body">
							<!--
								Flash messages allow you to display once-off status messages to users, e.g. form
								validation errors, success messages, etc
							-->
							{{#if messages}}
							<div id="flash-messages" class="container">
								{{#if messages.info}}
								<div class="alert alert-info">
										{{{flashMessages messages.info}}}
								</div>
								{{/if}}
								{{#if messages.success}}
								<div class="alert alert-success">
										{{{flashMessages messages.success}}}
								</div>
								{{/if}}
								{{#if messages.warning}}
								<div class="alert alert-warning">
										{{{flashMessages messages.warning}}}
								</div>
								{{/if}}
								{{#if messages.error}}
								<div class="alert alert-danger">
										{{{flashMessages messages.error}}}
								</div>
								{{/if}}
							</div>
							{{/if}}
							<!-- The content block should contain the body of your template's content-->
							{{{body}}}
						</div>
					</div>
				</section>
				
			</div>
		</div>

		<!-- Sidebar -->
		<div id="sidebar">
			<div class="inner">

				<!-- Search -->
				<section id="search" class="alt">
					<form method="post" action="#">
						<input type="text" name="query" id="query" placeholder="Search" />
					</form>
				</section>

				<!-- Menu -->
				<nav id="menu">
					<header class="major">
						<h2>Menu</h2>
					</header>
					<ul>
						{{# each navLinks}}
							<li {{#ifeq ../section key}}class="active"{{else}}{{/ifeq}}>
								<a href="{{ href }}">{{ label }}</a>
							</li>
						{{/each}}
						<li>
							<span class="opener">Admin</span>
							<ul>
								{{#if user}}
									<li><a href="/keystone/signout">Sign Out</a></li>
								{{else}}
									<li><a href="/keystone/signin">Sign In</a></li>
								{{/if}}
							</ul>
						</li>
					</ul>
				</nav>

				{{#if data.categories}}
					<!-- Section -->
					<nav id="menu">
						<header class="major">
							<h2>All Categories</h2>
						</header>
						<ul class="nav navbar-nav navbar-right">
							{{# each data.categories }}
								<li><a href="{{categoryUrl key}}" class="false list-group-item">{{name}}</a></li>
							{{/each}}
						</ul>
					</nav>
				{{/if}}

				<!-- Section -->
				<section>
					<header class="major">
						<h2>Get in touch</h2>
					</header>
					<p>To get the latest technology news from
						<strong>SpecialNewz.com</strong>
					</p>
					<ul class="contact">
						<li class="fa-envelope-o">
							<a href="mailto:support@specialnewz.com">support@specialnewz.com</a>
						</li>
						<li class="fa-phone"><a href="tel:4049938305">+1 (404) 993-8305</a></li>
						<li class="fa-home">109 Walton Way SE,<br/> Smyrna, GA 30082</li>
					</ul>
				</section>

				<!-- Footer -->
				<footer id="footer">
					<p class="copyright">&copy; SpecialNewz.com. All rights reserved.</p>
				</footer>

			</div>
		</div>

	</div>

	<!-- Scripts -->
	{{#if_or data.post data.categories}}
		<script src="../../assets/js/jquery.min.js"></script>
		<script src="../../assets/js/skel.min.js"></script>
		<script src="../../assets/js/util.js"></script>
		<!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
		<script src="../../assets/js/main.js"></script>
	{{else}}
		<script src="assets/js/jquery.min.js"></script>
		<script src="assets/js/skel.min.js"></script>
		<script src="assets/js/util.js"></script>
		<!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
		<script src="assets/js/main.js"></script>
	{{/if_or}}
	

</body>

</html>